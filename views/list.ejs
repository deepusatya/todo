<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
   
    <title>To Do List</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    
</head>
<body>
    
  
  
    <div id="background-wrap">
        <div class="bubble "></div>
        <div class="bubble "></div>
        <div class="bubble "></div>
        <div class="bubble "></div>
        <div class="bubble "></div>
        <div class="bubble "></div>
        <div class="bubble "></div>
        <div class="bubble "></div>
        <div class="bubble "></div>
        <div class="bubble "></div>
    </div>
    <div class="container">
        <div class="date-field">
            <h1><%=kindOfDay%>'s ToDo</h1>
            <p><%=todaysDate%></p>
        </div>
        <div class="secondPart">
        <div class="form-field">
            <form action="/" method="post">
                <input type="text" name="newTodo" placeholder="New item" class="input-field" autocomplete="off">
                <button type="submit" class="addButton">+</button>
            </form>
        </div>
        <div class="list-field">
            <form action="/delete" method="post">
            <ul class="item-lists" >
                <!-- <li>buy food</li>
                <li>cook food</li>
                <li>eat food</li> -->
                
                <%newListItem.forEach(function(newitem){%>
                    <li class="todo">
                        <input  value="<%=newitem._id%>" name="checkbox" class="checkBox" type="checkbox" onchange="this.form.submit()">
                        <p><%=newitem.name%></p>
                        <button type="submit" name="delete" value="<%=newitem._id%>" class="deletebtn">x</button>
                    </li>
               <% })%>
            
                
            </ul>
        </form>
        </div>
        </div>
    </div>
    <!-- <div>
    <h1>deepthi</h1>
    </div> -->
   
</body>
<script>
    var closebtns = document.getElementsByClassName("deletebtn");
    var i;


    for (i = 0; i < closebtns.length; i++) {
        closebtns[i].addEventListener("click", function() {
        this.parentElement.style.display = 'none';
        });
    }
</script>
</html>